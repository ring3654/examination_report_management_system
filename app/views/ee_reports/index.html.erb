<p id="notice"><%= notice %></p>

<h1>入学受験報告書</h1>

<table>
  <thead>
    <tr>
      <th>報告年月日</th>
      <th>組</th>
      <th>番号</th>
      <th>受験者ID</th>
      <th>学校名</th>
      <th>学部名</th>
      <th>学科名</th>
      <th>コース名</th>
      <th>試験日</th>
      <th>郵便番号</th>
      <th>所在地</th>
      <th>試験会場</th>
      <th>合格発表日</th>
      <th>入試形態</th> 
      <th>推薦入試形態</th>
      <th>承認フラグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ee_reports.each do |ee_report| %>
      <tr>
        <td><%= ee_report.reporting_date.strftime("%Y年%m月%d日") %></td>
        <td><%= ee_report.student_class %></td>
        <td><%= ee_report.student_number %></td>
        <td><%= ee_report.student_id %></td>
        <td><%= ee_report.school_name %></td>
        <td><%= ee_report.s_faculty_name %></td>
        <td><%= ee_report.s_department_name %></td>
        <td><%= ee_report.s_course_name %></td>
        <td><%= ee_report.test_day.strftime("%Y年%m月%d日") %></td>
        <td><%= ee_report.postal_code %></td>
        <td><%= ee_report.street_address %></td>
        <td><%= ee_report.examination_hall %></td>
        <td><%= ee_report.result_publication_date.strftime("%Y年%m月%d日") %></td>
        <td><%= ee_report.entrance_form %></td>
        <td><%= ee_report.recommended_group %></td>
        <td><%= ee_report.approval_flg %></td>
        <td><%= link_to '閲覧', ee_report %></td>
        <td><%= link_to '編集', edit_ee_report_path(ee_report) %></td>
        <td><%= link_to '削除', ee_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<td><%= link_to '報告書作成', new_ee_report_path %></td>
