<h1 style="text-align: center;">トップページ</h1>
<% if @user_authority == 2 %>
<p style="line-height: 30px; text-align: center;"><%= link_to '報告書の登録', home_report_top_path %></p>
<% end %>
<p style="line-height: 30px; text-align: center;"><%= link_to '報告書の検索', home_retrieval_top_path %></p>
<% if @user_authority == 1 %>
  <p style="line-height: 30px; text-align: center;"><%= link_to 'ログインユーザ－一覧', users_path %></p>
<% end %>
<% if @user_authority == 1 %>
  <p style="line-height: 30px; text-align: center;"><%= link_to '報告書未承認一覧', unapproved_reports_index_path %></p>
<% end %>


<% if  @user_authority == 2 %>
<h2>未承認一覧</h2>
<div style="height:400px; overflow-y:auto;">
<table>
  <thead>
    <tr>
    <th width="35%">受験者ID</th>
    <th width="35%">学校名・企業名</th>
    <th width="30%"></th>
    </tr>
  </thead>
</table>
 
<table>
  <tbody>
    <% @ee_reports.each do |ee_report| %>
      <tr>
        <td width="35%"><%= ee_report.student_id %></td>
        <td width="35%"><%= ee_report.school_name %></td>
        <td width="15%"><%= link_to '閲覧', ee_report %></td>
        <td width="15%"><%= link_to '複写', copy_ee_report_path(ee_report) %></td>
      </tr>
    <% end %>

    <% @et_reports.each do |et_report| %>
      <tr>
        <td width="35%"><%= et_report.student_id %></td>
        <td width="35%"><%= et_report.office_name %></td>
        <td width="15%"><%= link_to '閲覧', et_report %></td>
        <td width="15%"><%= link_to '複写', copy_et_report_path(et_report) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<% end %>